@model Presentation.Models.PagedResultModel<IEnumerable<Presentation.Models.ProductModel>>

@{
    ViewData["Title"] = "Home Page";
}

<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
        </div>
    </div>
</header>
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
          @foreach(var items in Model.Items)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        @if (items.DiscountPercent > 0)
                        {
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                        }
                        <!-- Product image-->
                        <img class="card-img-top" src="https://localhost:7107/@items.ProductImagePath" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@items.Name</h5>
                                <!-- Product price-->
                                @if(items.DiscountPercent > 0)
                                {
                                    <span class="text-muted text-decoration-line-through">@items.Price </span>
                                    @CalculateDiscountedPrice(items.Price, items.DiscountPercent)

                                }
                                else
                                {
                                    @items.Price
                                }
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <form asp-action="AddToCart" asp-controller="Home" method="post">
                                <input class="d-none" value="@items.Id" name="productId" />
                                <div class="text-center"><button type="submit" class="btn btn-outline-dark mt-auto" href="#">Add to cart</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            }

        
        </div>



        <div class="d-flex justify-content-center">
            @{
                var urlTemplate = Url.Action() + "?pageIndex={0}";
                var request = ViewContext.HttpContext.Request;
                foreach (var key in request.Query.Keys)
                {
                    if (key == "pageIndex")
                    {
                        continue;
                    }
                    if (request.Query[key].Count > 1)
                    {
                        foreach (var item in (string[])request.Query[key])
                        {
                            urlTemplate += "&" + key + "=" + item;
                        }
                    }
                    else
                    {
                        urlTemplate += "&" + key + "=" + request.Query[key];
                    }
                }

                var startIndex = Math.Max(Model.PageIndex - 5, 1);
                var finishIndex = Math.Min(Model.PageIndex + 5, Model.PageCount);
            }

            @if (Model.PageCount > 1)
            {
                <ul class="pagination">
                    @if (Model.PageIndex != startIndex)
                    {
                        <li class="page-item">
                            <a class="page-link" title="1" href="@urlTemplate.Replace("{0}", "1")">Đầu</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@urlTemplate.Replace("{0}", (Model.PageIndex-1).ToString())">Trước</a>
                        </li>
                    }
                    @for (var i = startIndex; i <= finishIndex; i++)
                    {
                        if (i == Model.PageIndex)
                        {
                            <li class="page-item active">
                                <a class="page-link" href="#">@i <span class="sr-only"></span></a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" title="Trang @i.ToString()" href="@urlTemplate.Replace("{0}", i.ToString())">@i</a></li>
                        }
                    }
                    @if (Model.PageIndex != finishIndex)
                    {
                        <li class="page-item">
                            <a class="page-link" title="@Model.PageCount.ToString()" href="@urlTemplate.Replace("{0}", (Model.PageIndex+1).ToString())">Sau</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@urlTemplate.Replace("{0}", Model.PageCount.ToString())">Cuối</a>
                        </li>
                    }
                </ul>
            }
        </div>
        

        @*@await Component.InvokeAsync("Pager", Model)*@
    </div>
</section>


@functions{
    decimal CalculateDiscountedPrice(decimal price, decimal discountPercentage)
    {
        return price - (price * (discountPercentage / 100));
    }
}

@if (ViewBag.ShowNotification == true)
{
    <script>
        $(document).ready(function () {
            var notificationMessage = "@ViewBag.NotificationMessage";

            $("#notification").data("kendoNotification").show(notificationMessage, "success");
        });
    </script>
}